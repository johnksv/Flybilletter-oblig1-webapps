@model Flybilletter.Models.KredittkortViewModel

<div class="panel panel-default" style="margin-bottom: 0px;">

    <div class="panel-heading">
        <h3 class="panel-title">Betaling</h3>
    </div>

    <div class="panel-body">
        <div class="col-md-6">

            @using (@Html.BeginForm("Kreditkort", "Home", FormMethod.Post, new { id = "kreditkortform" }))
            {


                <div class="form-group">
                    @Html.LabelFor(model => model.Kortholder, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Kortholder, new { htmlAttributes = new { @class = "form-control", placeholder = "Fullt navn", type = "text", autocomplete = "cc-name" } })
                    @Html.ValidationMessageFor(model => model.Kortholder, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Kortnummer, htmlAttributes: new { @class = "control-label" })


                    @Html.EditorFor(model => model.Kortnummer, new { htmlAttributes = new { @class = "form-control", placeholder = "Kortnummer", type = "number", autocomplete = "cc-number", min = "000" } })
                    @Html.ValidationMessageFor(model => model.Kortnummer, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CVC, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.CVC, new { htmlAttributes = new { @class = "form-control", placeholder = "CVC", type = "number", autocomplete = "cc-csc", min = "000", max = "999" } })
                    @Html.ValidationMessageFor(model => model.CVC, "", new { @class = "text-danger" })

                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Utlop, htmlAttributes: new { @class = "control-label" })

                    @Html.EditorFor(model => model.Utlop, new { htmlAttributes = new { @class = "form-control", placeholder = "MM-ÅÅ", type = "text", autocomplete = "cc-exp" } })
                    @Html.ValidationMessageFor(model => model.Utlop, "", new { @class = "text-danger" })

                </div>
            }

        </div>

        <div class="col-md-6">
            <p>BETALINGSINFORMASJON</p>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Hva</th>
                            <th>Pris</th>
                        </tr>
                    </thead>
                    <tr>
                        <td>
                            Flybiletter
                        </td>
                        <td>1049,-</td>

                    </tr>
                </table>
            </div>

            <p>Totalbeløp:</p>

        </div>

    </div>

    <div class="panel-footer">
        <button class="btn btn-success" type="submit" form="kreditkortform">Bekreft informasjon</button>
        <button class="btn btn-danger" data-dismiss="modal">Avbryt</button>
    </div>
</div>


