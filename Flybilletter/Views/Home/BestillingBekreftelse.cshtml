@model Flybilletter.Models.BestillingViewModel


@{
    ViewBag.Title = "Bekreftelse";
}

@if (Model == null)
{
    <h2>Bestillingbekreftelse</h2>
    <div class="alert alert-warning">
        <strong>Ugyldig tilgang!</strong> Ingen bestiling er aktiv. Vennligst gå til søk, og følg stegene.
    </div>
}
else
{



    <h2>Bestillingbekreftelse <small>- Sjekk at biletten din er korrekt</small></h2>

    <h3>Din reise fra @Model.Fra til @Model.Til</h3>
    <div>
        <h4>Flygninger</h4>
        @foreach (var item in Model.Flygninger)
        {
         @item.AvgangsTid.ToShortDateString()
        }
        


    </div>



    for (int i = 0; i < Model.Kunder.Count; i++)
    {
        <h4>Passasjer @i</h4>
        @Html.DisplayFor(model => model.Kunder[i], new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Kunder, "", new { @class = "text-danger" })
    }

    <a href="/Home/Bekreftelse" class="btn btn-primary">Bekreft og kjøp</a>
}