@model Flybilletter.Models.BestillingViewModel

@{
    ViewBag.Title = "Bestille";
}

<h2>Informasjon om bestilling</h2>

<h3>@Model.Fra - @Model.Til</h3>



@foreach (var item in Model.Flygninger)
{
    <p>@item.AnkomstTid.ToShortDateString() - @item.AvgangsTid.ToShortDateString()</p>
}

<hr />
<h3>Reisende</h3>
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        for (int i = 0; i < Model.Kunder.Count; i++)
        {
            <h4>Passasjer @i</h4>
            @Html.EditorFor(model => model.Kunder[i], new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kunder, "", new { @class = "text-danger" })
        }

        <!------------------------------------------
            Kan også løses på denne måten, da slipper vi unna for-løkken, men får ikke indeksen til hvilken passasjer det er.
            @Html.EditorFor(model => model.Kunder, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Kunder, "", new { @class = "text-danger" })
        
        ---------------------------------------------->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lagre" class="btn btn-default" />
            </div>
        </div>

    }
   
<div>
    @Html.ActionLink("Tilbake til søk", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
