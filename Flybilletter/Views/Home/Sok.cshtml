@model Flybilletter.Models.SokViewModel

@{
    ViewBag.Title = "Sok";
    var jsSerializer = new System.Web.Script.Serialization.JavaScriptSerializer();
    string jsonFlyplasser = jsSerializer.Serialize(Model.Flyplasser);
}
<script type="text/javascript">
    var flyplasser = JSON.parse('@Html.Raw(jsonFlyplasser)');
    console.log(flyplasser);

    function fraFlyplasser()
    {
        var utStreng = "";
        for (var i in flyplasser) {
            utStreng += "<option value='" + flyplasser[i].ID + "'>" + flyplasser[i].Navn + " - " + flyplasser[i].ID + "</option>";
        }
        $("#fraFlyplass").empty().append(utStreng);
        console.log(utStreng);
    }

    function tilFlyplass(fraFlyplassID)
    {
        var utStreng = "";
        for (var i in flyplasser) {
            if (flyplasser[i].ID != fraFlyplassID)
            {
                utStreng += "<option value='" + flyplasser[i].ID + "'>" + flyplasser[i].Navn + " - " + flyplasser[i].ID + "</option>";
            }
        }
        $("#tilFlyplass").empty().append(utStreng);
        console.log(utStreng);
    }

    $(document).ready(function ()
    {
        $("#fraFlyplass").click(fraFlyplasser);
    });
</script>
<h2>Sok</h2>


